<Window x:Class="K_NECT.Views.Docente.GestionEstudiantesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="K-NECT - Gestión de Estudiantes" 
        Height="700" 
        Width="1200"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        Icon="/Resources/Images/LogoK-nect3.png">

    <Border Background="{StaticResource White}" 
            CornerRadius="15" 
            Margin="20"
            BorderBrush="{StaticResource GrayLight}"
            BorderThickness="1">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ===== HEADER ===== -->
            <Border Grid.Row="0" 
                    Background="{StaticResource PrimaryMedium}" 
                    CornerRadius="15,15,0,0"
                    Padding="25,15">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Botón Volver -->
                    <Button Grid.Column="0"
                            Content="← Volver"
                            Background="Transparent"
                            Foreground="{StaticResource White}"
                            BorderThickness="0"
                            FontSize="14"
                            Cursor="Hand"
                            Click="BtnVolver_Click"/>

                    <!-- Título -->
                    <TextBlock Grid.Column="1"
                               Text="👨‍🎓 GESTIÓN DE ESTUDIANTES"
                               Foreground="{StaticResource White}"
                               FontSize="20"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>

                    <!-- Botón Cerrar -->
                    <Button Grid.Column="2"
                            Content="×"
                            Background="Transparent"
                            Foreground="{StaticResource White}"
                            BorderThickness="0"
                            FontSize="24"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="BtnCerrar_Click"/>
                </Grid>
            </Border>

            <!-- ===== FILTROS Y BÚSQUEDA ===== -->
            <Border Grid.Row="1" 
                    Background="{StaticResource PrimaryLight}"
                    Padding="25,20">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="250"/>
                    </Grid.ColumnDefinitions>

                    <!-- Selector de Asignatura -->
                    <ComboBox x:Name="cmbAsignaturas"
                              Width="280"
                              Height="35"
                              SelectionChanged="CmbAsignaturas_SelectionChanged"
                              Margin="10,0,0,0"
                              FontFamily="Segoe UI"
                              FontSize="13">        
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Margin="5">
                                    <TextBlock Text="{Binding NombreAsignatura}"
                           FontWeight="Bold"
                           Foreground="#2E3A59"/>
                                    <TextBlock Text="{Binding Grupo}"
                           FontSize="11"
                           Foreground="Gray"/>
                                    <TextBlock Text="{Binding CicloAcademico}"
                           FontSize="11"
                           Foreground="#808080"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>


                    <!-- Buscador -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Buscar Estudiante"
                                   Foreground="{StaticResource White}"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>

                        <TextBox x:Name="txtBuscar"
                                 Text="Buscar por nombre o código..."
                                 FontSize="13"
                                 Foreground="Gray"
                                 Height="40"
                                 VerticalContentAlignment="Center"
                                 Padding="12,0"
                                 GotFocus="TxtBuscar_GotFocus"
                                 LostFocus="TxtBuscar_LostFocus"
                                 TextChanged="TxtBuscar_TextChanged"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ===== LISTA DE ESTUDIANTES ===== -->
            <Border Grid.Row="2" 
                    Margin="25,20,25,25">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Información de la selección -->
                    <Border Grid.Row="0"
                            Background="{StaticResource GrayLight}"
                            Padding="15"
                            CornerRadius="8"
                            Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="txtInfoAsignatura"
                                      Text="Selecciona una asignatura para ver los estudiantes"
                                      Foreground="{StaticResource TextDark}"
                                      FontSize="13"
                                      FontWeight="SemiBold"/>

                            <TextBlock x:Name="txtCantidadEstudiantes"
                                      Text=""
                                      Foreground="{StaticResource PrimaryDark}"
                                      FontSize="13"
                                      FontWeight="Bold"
                                      Margin="15,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- DataGrid de Estudiantes -->
                    <DataGrid Grid.Row="1"
                             x:Name="dgEstudiantes"
                             AutoGenerateColumns="False"
                             IsReadOnly="True"
                             GridLinesVisibility="None"
                             Background="{StaticResource White}"
                             RowBackground="{StaticResource White}"
                             AlternatingRowBackground="{StaticResource GrayLight}"
                             BorderBrush="{StaticResource GrayLight}"
                             BorderThickness="1"
                             CanUserResizeRows="False"
                             HeadersVisibility="Column"
                             SelectionMode="Single"
                             FontSize="13">

                        <!-- Estilo del Header -->
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{StaticResource PrimaryDark}"/>
                                <Setter Property="Foreground" Value="{StaticResource White}"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="Padding" Value="15,12"/>
                                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryLight}"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <!-- Estilo de las filas -->
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Height" Value="45"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource PrimaryLight}"/>
                                        <Setter Property="Foreground" Value="{StaticResource White}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <!-- Columnas -->
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Código" 
                                              Binding="{Binding CodigoEstudiante}" 
                                              Width="120"/>

                            <DataGridTextColumn Header="Nombres" 
                                              Binding="{Binding Nombres}" 
                                              Width="*"/>

                            <DataGridTextColumn Header="Apellidos" 
                                              Binding="{Binding Apellidos}" 
                                              Width="*"/>

                            <DataGridTextColumn Header="Correo" 
                                              Binding="{Binding CorreoEstudiante}" 
                                              Width="220"/>

                            <DataGridTextColumn Header="Carrera" 
                                              Binding="{Binding Carrera}" 
                                              Width="180"/>

                            <DataGridTextColumn Header="Semestre" 
                                              Binding="{Binding Semestre}" 
                                              Width="80"/>

                            <DataGridTextColumn Header="Estado" 
                                              Binding="{Binding EstadoInscripcion}" 
                                              Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Mensaje cuando no hay estudiantes -->
                    <StackPanel Grid.Row="1"
                               x:Name="pnlSinEstudiantes"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Visibility="Collapsed">
                        <TextBlock Text="📋"
                                  FontSize="48"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,15"/>
                        <TextBlock Text="No hay estudiantes inscritos en esta asignatura"
                                  Foreground="{StaticResource TextLight}"
                                  FontSize="16"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>