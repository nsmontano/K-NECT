<Window x:Class="K_NECT.Views.Estudiante.MenuEstudianteView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="K-NECT - Panel Estudiante" 
        Height="750" 
        Width="1300"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        Icon="/Resources/Images/LogoK-nect3.png">

    <Window.Resources>
        <!-- Estilo para botones del menú lateral -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryLight}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource White}" 
            CornerRadius="15" 
            Margin="20"
            BorderBrush="{StaticResource GrayLight}"
            BorderThickness="1">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ===== SIDEBAR IZQUIERDO ===== -->
            <Border Grid.Column="0" 
                    Background="{StaticResource PrimaryDark}" 
                    CornerRadius="15,0,0,15">

                <StackPanel VerticalAlignment="Stretch">

                    <!-- Logo y Header -->
                    <StackPanel Margin="25,30,25,30" HorizontalAlignment="Center">
                        <TextBlock Text="K-NECT"
                                   Foreground="{StaticResource White}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,5"/>

                        <TextBlock Text="ESTUDIANTE"
                                   Foreground="{StaticResource PrimaryLight}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>

                        <!-- Info del estudiante -->
                        <Border Background="{StaticResource PrimaryMedium}"
                                CornerRadius="8"
                                Padding="15"
                                Margin="0,0,0,0">
                            <StackPanel>
                                <Border Width="80"
                                        Height="80"
                                        CornerRadius="40"
                                        BorderBrush="{StaticResource White}"
                                        BorderThickness="2"
                                        Margin="0,0,0,8"
                                        ClipToBounds="True">
                                    <Image Source="/Resources/Images/studentDefault.PNG"
                                       Stretch="UniformToFill"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                                </Border>

                                <TextBlock x:Name="txtNombreEstudiante"
                                           Text="Nombre Estudiante"
                                           Foreground="{StaticResource White}"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,5"/>

                                <TextBlock x:Name="txtCodigoEstudiante"
                                           Text="Código: ------"
                                           Foreground="{StaticResource White}"
                                           FontSize="11"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Menú de Navegación -->
                    <StackPanel Margin="15,0,15,20">
                        <Button Style="{StaticResource MenuButtonStyle}" Click="BtnInicio_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🏠" FontSize="16" Margin="0,0,15,0"/>
                                <TextBlock Text="Inicio" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}" Click="BtnAsignaturas_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📚" FontSize="16" Margin="0,0,15,0"/>
                                <TextBlock Text="Mis Asignaturas" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}" Click="BtnDocentes_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👨‍🏫" FontSize="16" Margin="0,0,15,0"/>
                                <TextBlock Text="Docentes" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}" Click="BtnHorasEstudio_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⏱️" FontSize="16" Margin="0,0,15,0"/>
                                <TextBlock Text="Horas de Estudio" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}" Click="BtnReportes_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📈" FontSize="16" Margin="0,0,15,0"/>
                                <TextBlock Text="Reportes" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Espacio flexible -->
                    <StackPanel VerticalAlignment="Bottom" Margin="15,0,15,25">
                        <!-- Separador -->
                        <Border Height="1" Background="{StaticResource PrimaryLight}" Margin="0,0,0,20"/>

                        <!-- Botón Cerrar Sesión -->
                        <Button Background="{StaticResource ErrorDark}"
                                Foreground="{StaticResource White}"
                                BorderThickness="0"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Padding="20,12"
                                Cursor="Hand"
                                Click="BtnCerrarSesion_Click">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Cerrar Sesión"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- ===== CONTENIDO PRINCIPAL ===== -->
            <Border Grid.Column="1" 
                    Background="{StaticResource White}" 
                    CornerRadius="0,15,15,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header Superior -->
                    <Border Grid.Row="0" 
                            Background="{StaticResource PrimaryMedium}" 
                            Padding="25,15"
                            CornerRadius="0,15,0,0">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Botón Volver -->
                            <Button Grid.Column="0"
                                    Content="← Volver"
                                    Background="Transparent"
                                    Foreground="{StaticResource White}"
                                    BorderThickness="0"
                                    FontSize="12"
                                    Cursor="Hand"
                                    Click="BtnVolver_Click"/>

                            <!-- Título Central -->
                            <TextBlock Grid.Column="1"
                                       Text="PANEL ESTUDIANTE - K-NECT"
                                       Foreground="{StaticResource White}"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>

                            <!-- Botón Notificaciones -->
                            <Button Grid.Column="2"
                                    Content="🔔"
                                    Background="Transparent"
                                    Foreground="{StaticResource White}"
                                    BorderThickness="0"
                                    FontSize="16"
                                    Cursor="Hand"
                                    Click="BtnNotificaciones_Click"
                                    Margin="0,0,15,0"/>

                            <!-- Botón Ajustes -->
                            <Button Grid.Column="3"
                                    Content="⚙️"
                                    Background="Transparent"
                                    Foreground="{StaticResource White}"
                                    BorderThickness="0"
                                    FontSize="16"
                                    Cursor="Hand"
                                    Click="BtnAjustes_Click"/>
                        </Grid>
                    </Border>

                    <!-- Contenido Principal -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <Grid Margin="30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Banner de Bienvenida -->
                            <Border Grid.Row="0"
                                    Background="{StaticResource PrimaryLight}" 
                                    Padding="35" 
                                    CornerRadius="12" 
                                    Margin="0,0,0,30">

                                <StackPanel>
                                    <TextBlock x:Name="txtBienvenida" 
                                              Text="¡Bienvenido de vuelta! 🎓" 
                                              Foreground="{StaticResource White}" 
                                              FontSize="28" 
                                              FontWeight="Bold"
                                              Margin="0,0,0,8"/>

                                    <TextBlock Text="Tu centro de gestión académica integral" 
                                              Foreground="{StaticResource GrayLight}" 
                                              FontSize="16"
                                              Margin="0,0,0,12"/>

                                    <TextBlock x:Name="txtEstadisticas"
                                       Foreground="{StaticResource White}"
                                       FontSize="12"
                                       TextAlignment="Left"
                                       TextWrapping="Wrap"
                                       Margin="10,5,10,5"/>

                                </StackPanel>
                            </Border>

                            <!-- Sección de Calendario -->
                            <Border Grid.Row="1" 
                                    Background="{StaticResource White}"
                                    BorderBrush="{StaticResource GrayLight}"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Padding="25"
                                    Margin="0,0,0,30">

                                <StackPanel>
                                    <TextBlock Text="📅 CALENDARIO ACADÉMICO"
                                              Foreground="{StaticResource PrimaryDark}"
                                              FontSize="18"
                                              FontWeight="Bold"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,20"/>

                                    <Calendar x:Name="calendarioAcademico"
                                             BorderBrush="{StaticResource PrimaryLight}"
                                             BorderThickness="1"
                                             HorizontalAlignment="Center"
                                             Margin="0,0,0,15"/>

                                    <TextBlock Text="💡 Selecciona una fecha para ver eventos importantes"
                                              Foreground="{StaticResource TextLight}"
                                              FontSize="12"
                                              HorizontalAlignment="Center"
                                              Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Tarjetas de Acceso Rápido -->
                            <StackPanel Grid.Row="2" Orientation="Vertical">
                                <TextBlock Text="Accesos Rápidos"
                                          Foreground="{StaticResource TextDark}"
                                          FontSize="22"
                                          FontWeight="Bold"
                                          Margin="0,0,0,20"/>

                                <UniformGrid Columns="3" HorizontalAlignment="Stretch">
                                    <!-- Mis Asignaturas -->
                                    <Border Background="{StaticResource White}"
                                            BorderBrush="{StaticResource GrayLight}"
                                            BorderThickness="1"
                                            CornerRadius="10"
                                            Padding="25"
                                            Margin="0,0,15,0"
                                            Cursor="Hand"
                                            MouseDown="CardAsignaturas_MouseDown">
                                        <StackPanel>
                                            <TextBlock Text="📚" 
                                                      FontSize="40"
                                                      HorizontalAlignment="Center"
                                                      Margin="0,0,0,15"/>
                                            <TextBlock Text="MIS ASIGNATURAS" 
                                                      Foreground="{StaticResource PrimaryDark}"
                                                      FontSize="15"
                                                      FontWeight="Bold"
                                                      HorizontalAlignment="Center"
                                                      TextAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Calificaciones -->
                                    <Border Background="{StaticResource White}"
                                            BorderBrush="{StaticResource GrayLight}"
                                            BorderThickness="1"
                                            CornerRadius="10"
                                            Padding="25"
                                            Margin="7,0,8,0"
                                            Cursor="Hand"
                                            MouseDown="CardCalificaciones_MouseDown">
                                        <StackPanel>
                                            <TextBlock Text="📊" 
                                                      FontSize="40"
                                                      HorizontalAlignment="Center"
                                                      Margin="0,0,0,15"/>
                                            <TextBlock Text="CALIFICACIONES" 
                                                      Foreground="{StaticResource PrimaryDark}"
                                                      FontSize="15"
                                                      FontWeight="Bold"
                                                      HorizontalAlignment="Center"
                                                      TextAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Docentes -->
                                    <Border Background="{StaticResource White}"
                                            BorderBrush="{StaticResource GrayLight}"
                                            BorderThickness="1"
                                            CornerRadius="10"
                                            Padding="25"
                                            Margin="15,0,0,0"
                                            Cursor="Hand"
                                            MouseDown="CardDocentes_MouseDown">
                                        <StackPanel>
                                            <TextBlock Text="👨‍🏫" 
                                                      FontSize="40"
                                                      HorizontalAlignment="Center"
                                                      Margin="0,0,0,15"/>
                                            <TextBlock Text="DOCENTES" 
                                                      Foreground="{StaticResource PrimaryDark}"
                                                      FontSize="15"
                                                      FontWeight="Bold"
                                                      HorizontalAlignment="Center"
                                                      TextAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Horas de Estudio -->
                                    <Border Background="{StaticResource White}"
                                            BorderBrush="{StaticResource GrayLight}"
                                            BorderThickness="1"
                                            CornerRadius="10"
                                            Padding="25"
                                            Margin="15,0,0,0"
                                            Cursor="Hand"
                                            MouseDown="CardHorasEstudio_MouseDown">     
                                        <StackPanel>
                                            <TextBlock Text="⏱️" 
                                              FontSize="40"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,15"/>
                                            <TextBlock Text="HORAS DE ESTUDIO" 
                                              Foreground="{StaticResource PrimaryDark}"
                                              FontSize="15"
                                              FontWeight="Bold"
                                              HorizontalAlignment="Center"
                                              TextAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </UniformGrid>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>