<Window x:Class="K_NECT.Views.Registro_Login.RegistroView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="K-NECT - Registro" 
        Height="700" 
        Width="1100"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        Icon="/Resources/Images/LogoK-nect3.png">

    <!-- 🎨 CONTENEDOR PRINCIPAL -->
    <Grid>
        <!-- Fondo con efecto -->
        <Border CornerRadius="12">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1E3A8A" Offset="0"/>
                    <GradientStop Color="#3B82F6" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!-- CONTENEDOR DEL REGISTRO -->
        <Border CornerRadius="12"                    
                BorderThickness="2"
                Background="{StaticResource PrimaryDark}"
                BorderBrush="{StaticResource PrimaryMedium}"
                Margin="40,20,40,20">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- ===== HEADER ===== -->
                <Border Grid.Row="0" 
                        Background="{StaticResource PrimaryMedium}" 
                        CornerRadius="12,12,0,0">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="K-NECT - CREAR CUENTA"
                                   Foreground="{StaticResource White}"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   Margin="20,0,0,0"/>

                        <!-- Botón Minimizar -->
                        <Button Grid.Column="1"
                                Content="_"
                                Background="Transparent"
                                Foreground="{StaticResource White}"
                                BorderThickness="0"
                                FontSize="16"
                                FontWeight="Bold"
                                Cursor="Hand"
                                VerticalContentAlignment="Top"
                                Click="BtnMinimize_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="Transparent">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Botón Cerrar -->
                        <Button Grid.Column="2"
                                Content="×"
                                Background="Transparent"
                                Foreground="{StaticResource White}"
                                BorderThickness="0"
                                FontSize="18"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Click="BtnCerrar_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="Transparent">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>

                <!-- ===== CONTENIDO PRINCIPAL - DISEÑO DIVIDIDO ===== -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- ===== LADO IZQUIERDO - INFORMACIÓN ===== -->
                    <Border Grid.Column="0" 
                            Background="{StaticResource PrimaryLight}" 
                            Margin="20,20,10,20"
                            CornerRadius="8">

                        <StackPanel VerticalAlignment="Center" Margin="30">
                            <!-- Logo -->
                            <TextBlock Text="K-NECT"
                                       Foreground="{StaticResource White}"
                                       FontSize="36"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="Únete a K-NECT"
                                       Foreground="{StaticResource White}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       TextAlignment="Center"
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="Comienza tu journey académico con nosotros"
                                       Foreground="{StaticResource GrayLight}"
                                       FontSize="14"
                                       TextAlignment="Center"
                                       Margin="0,0,0,30"/>

                            <!-- Beneficios -->
                            <StackPanel Margin="0,20,0,0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="✅" FontSize="16" Margin="0,0,12,0"/>
                                    <TextBlock Text="Seguimiento personalizado de tu progreso" 
                                              Foreground="{StaticResource White}" 
                                              FontSize="13"
                                              TextWrapping="Wrap"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="📊" FontSize="16" Margin="0,0,12,0"/>
                                    <TextBlock Text="Reportes detallados de tu rendimiento" 
                                              Foreground="{StaticResource White}" 
                                              FontSize="13"
                                              TextWrapping="Wrap"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="👨‍🏫" FontSize="16" Margin="0,0,12,0"/>
                                    <TextBlock Text="Comunicación directa con docentes" 
                                              Foreground="{StaticResource White}" 
                                              FontSize="13"
                                              TextWrapping="Wrap"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🎯" FontSize="16" Margin="0,0,12,0"/>
                                    <TextBlock Text="Herramientas para alcanzar tus metas" 
                                              Foreground="{StaticResource White}" 
                                              FontSize="13"
                                              TextWrapping="Wrap"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Estadísticas - PENDIENTE -->
                            <Border Background="{StaticResource PrimaryDark}"
                                    CornerRadius="6"
                                    Padding="15"
                                    Margin="0,30,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                        <TextBlock Text="250+"
                                                  Foreground="{StaticResource SuccessLight}"
                                                  FontSize="20"
                                                  FontWeight="Bold"
                                                  TextAlignment="Center"/>
                                        <TextBlock Text="Estudiantes"
                                                  Foreground="{StaticResource GrayLight}"
                                                  FontSize="11"
                                                  TextAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                        <TextBlock Text="35+"
                                                  Foreground="{StaticResource SuccessLight}"
                                                  FontSize="20"
                                                  FontWeight="Bold"
                                                  TextAlignment="Center"/>
                                        <TextBlock Text="Docentes"
                                                  Foreground="{StaticResource GrayLight}"
                                                  FontSize="11"
                                                  TextAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- ===== LADO DERECHO - FORMULARIO ===== -->
                    <ScrollViewer Grid.Column="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  Margin="10,20,20,20">
                        <StackPanel Orientation="Vertical" 
                                    HorizontalAlignment="Center"
                                    Width="450"
                                    Margin="0,0,0,20">

                            <TextBlock Text="Crear Cuenta"
                                       Foreground="{StaticResource White}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,25"/>

                            <!-- ===== INFORMACIÓN PERSONAL ===== -->
                            <TextBlock Text="Información Personal"
                                       Foreground="{StaticResource White}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Margin="0,0,0,15"/>

                            <!-- Nombres -->
                            <TextBlock Text="Nombres Completos *"
                                       Foreground="{StaticResource GrayLight}"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>

                            <TextBox x:Name="txtNombres"
                                     FontSize="13"
                                     Foreground="{StaticResource White}"
                                     CaretBrush="{StaticResource White}"
                                     BorderBrush="{StaticResource PrimaryLight}"
                                     BorderThickness="0,0,0,2"
                                     Background="Transparent"
                                     Height="35"
                                     VerticalContentAlignment="Center"
                                     Padding="10,0"
                                     Margin="0,0,0,15">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="{StaticResource SuccessLight}"/>
                                            </Trigger>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="BorderBrush" Value="{StaticResource SuccessLight}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <!-- Apellidos -->
                            <TextBlock Text="Apellidos Completos *"
                                       Foreground="{StaticResource GrayLight}"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>

                            <TextBox x:Name="txtApellidos"
                                     FontSize="13"
                                     Foreground="{StaticResource White}"
                                     CaretBrush="{StaticResource White}"
                                     BorderBrush="{StaticResource PrimaryLight}"
                                     BorderThickness="0,0,0,2"
                                     Background="Transparent"
                                     Height="35"
                                     VerticalContentAlignment="Center"
                                     Padding="10,0"
                                     Margin="0,0,0,15">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="{StaticResource SuccessLight}"/>
                                            </Trigger>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="BorderBrush" Value="{StaticResource SuccessLight}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <!-- Código Estudiante -->
                            <TextBlock Text="Código de Estudiante *"
                                       Foreground="{StaticResource GrayLight}"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>

                            <TextBox x:Name="txtCodigoEstudiante"
                                     Text="Ej: KNEC2025001"
                                     FontSize="13"
                                     Foreground="Gray"
                                     CaretBrush="{StaticResource White}"
                                     BorderBrush="{StaticResource PrimaryLight}"
                                     BorderThickness="0,0,0,2"
                                     Background="Transparent"
                                     Height="35"
                                     VerticalContentAlignment="Center"
                                     Padding="10,0"
                                     Margin="0,0,0,15"
                                     GotFocus="TxtCodigoEstudiante_GotFocus"
                                     LostFocus="TxtCodigoEstudiante_LostFocus">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="{StaticResource SuccessLight}"/>
                                            </Trigger>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="BorderBrush" Value="{StaticResource SuccessLight}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <!-- Carrera y Semestre -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>

                                <!-- Carrera -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Carrera *"
                                               Foreground="{StaticResource GrayLight}"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8"/>

                                    <TextBox x:Name="txtCarrera"
                                             FontSize="13"
                                             Foreground="{StaticResource White}"
                                             CaretBrush="{StaticResource White}"
                                             BorderBrush="{StaticResource PrimaryLight}"
                                             BorderThickness="0,0,0,2"
                                             Background="Transparent"
                                             Height="35"
                                             VerticalContentAlignment="Center"
                                             Padding="10,0"
                                             Margin="0,0,0,15">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="BorderBrush" Value="{StaticResource SuccessLight}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsFocused" Value="True">
                                                        <Setter Property="BorderBrush" Value="{StaticResource SuccessLight}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </StackPanel>

                                <!-- Semestre -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Semestre *"
                                               Foreground="{StaticResource GrayLight}"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8"/>

                                    <TextBox x:Name="txtSemestre"
                                             FontSize="13"
                                             Foreground="{StaticResource White}"
                                             CaretBrush="{StaticResource White}"
                                             BorderBrush="{StaticResource PrimaryLight}"
                                             BorderThickness="0,0,0,2"
                                             Background="Transparent"
                                             Height="35"
                                             VerticalContentAlignment="Center"
                                             Padding="10,0"
                                             Margin="0,0,0,15">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="BorderBrush" Value="{StaticResource SuccessLight}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsFocused" Value="True">
                                                        <Setter Property="BorderBrush" Value="{StaticResource SuccessLight}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </StackPanel>
                            </Grid>

                            <!-- Teléfono y Fecha Nacimiento -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Teléfono -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Teléfono"
                                               Foreground="{StaticResource GrayLight}"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8"/>

                                    <TextBox x:Name="txtTelefono"
                                             Text="503-7123-4567"
                                             FontSize="13"
                                             Foreground="Gray"
                                             CaretBrush="{StaticResource White}"
                                             BorderBrush="{StaticResource PrimaryLight}"
                                             BorderThickness="0,0,0,2"
                                             Background="Transparent"
                                             Height="35"
                                             VerticalContentAlignment="Center"
                                             Padding="10,0"
                                             Margin="0,0,0,15"
                                             GotFocus="TxtTelefono_GotFocus"
                                             LostFocus="TxtTelefono_LostFocus">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="BorderBrush" Value="{StaticResource SuccessLight}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsFocused" Value="True">
                                                        <Setter Property="BorderBrush" Value="{StaticResource SuccessLight}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </StackPanel>

                                <!-- Fecha Nacimiento -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Fecha Nacimiento"
                                               Foreground="{StaticResource GrayLight}"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8"/>

                                    <DatePicker x:Name="dpFechaNacimiento"
                                                FontSize="12"
                                                Foreground="{StaticResource TextDark}"
                                                BorderBrush="{StaticResource PrimaryLight}"
                                                BorderThickness="1"
                                                Background="{StaticResource White}"
                                                Height="35"
                                                VerticalContentAlignment="Center"
                                                Padding="5"
                                                Margin="0,0,0,15"/>
                                </StackPanel>
                            </Grid>

                            <!-- ===== CORREO ELECTRÓNICO ===== -->
                            <TextBlock Text="Correo Electrónico *"
                                       Foreground="{StaticResource GrayLight}"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>

                            <TextBox x:Name="txtCorreo"
                                     Text="ejemplo@itca.edu.sv"
                                     FontSize="13"
                                     Foreground="Gray"
                                     CaretBrush="{StaticResource White}"
                                     BorderBrush="{StaticResource PrimaryLight}"
                                     BorderThickness="0,0,0,2"
                                     Background="Transparent"
                                     Height="35"
                                     VerticalContentAlignment="Center"
                                     Padding="10,0"
                                     Margin="0,0,0,15"
                                     GotFocus="TxtCorreo_GotFocus"
                                     LostFocus="TxtCorreo_LostFocus">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="{StaticResource SuccessLight}"/>
                                            </Trigger>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="BorderBrush" Value="{StaticResource SuccessLight}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <!-- ===== CONTRASEÑA ===== -->
                            <TextBlock Text="Contraseña *"
                                       Foreground="{StaticResource GrayLight}"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>

                            <PasswordBox x:Name="txtPassword"
                                         FontSize="13"
                                         Foreground="{StaticResource White}"
                                         CaretBrush="{StaticResource White}"
                                         BorderBrush="{StaticResource PrimaryLight}"
                                         BorderThickness="0,0,0,2"
                                         Background="Transparent"
                                         Height="35"
                                         VerticalContentAlignment="Center"
                                         Padding="10,0"
                                         Margin="0,0,0,10">
                                <PasswordBox.Style>
                                    <Style TargetType="PasswordBox">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="{StaticResource SuccessLight}"/>
                                            </Trigger>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="BorderBrush" Value="{StaticResource SuccessLight}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </PasswordBox.Style>
                            </PasswordBox>

                            <!-- ===== CONFIRMAR CONTRASEÑA ===== -->
                            <TextBlock Text="Confirmar Contraseña *"
                                       Foreground="{StaticResource GrayLight}"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Margin="0,15,0,8"/>

                            <PasswordBox x:Name="txtConfirmarPassword"
                                         FontSize="13"
                                         Foreground="{StaticResource White}"
                                         CaretBrush="{StaticResource White}"
                                         BorderBrush="{StaticResource PrimaryLight}"
                                         BorderThickness="0,0,0,2"
                                         Background="Transparent"
                                         Height="35"
                                         VerticalContentAlignment="Center"
                                         Padding="10,0"
                                         Margin="0,0,0,20">
                                <PasswordBox.Style>
                                    <Style TargetType="PasswordBox">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="{StaticResource SuccessLight}"/>
                                            </Trigger>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="BorderBrush" Value="{StaticResource SuccessLight}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </PasswordBox.Style>
                            </PasswordBox>

                            <!-- ===== TÉRMINOS Y CONDICIONES ===== -->
                            <CheckBox x:Name="chkTerminos"
                                      Content="Acepto los términos y condiciones *"
                                      Foreground="{StaticResource GrayLight}"
                                      FontSize="11"
                                      Margin="0,0,0,25"/>

                            <!-- ===== BOTÓN REGISTRARSE ===== -->
                            <Button x:Name="btnRegistrarse"
                                    Content="👤 CREAR CUENTA"
                                    Background="{StaticResource SuccessDark}"
                                    Foreground="{StaticResource White}"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Padding="25,12"
                                    Margin="0,0,0,15"
                                    Cursor="Hand"
                                    Click="BtnRegistrarse_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!-- ===== ENLACE A LOGIN ===== -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="¿Ya tienes cuenta?"
                                           Foreground="{StaticResource GrayLight}"
                                           FontSize="11"/>
                                <TextBlock Text=" Inicia Sesión"
                                           Foreground="{StaticResource SuccessLight}"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Cursor="Hand"
                                           Margin="5,0,0,0"
                                           MouseDown="TxtIniciarSesion_MouseDown">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="TextDecorations" Value="Underline"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>