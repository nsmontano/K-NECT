<Window x:Class="K_NECT.Views.Registro_Login.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="K-NECT - Iniciar Sesión" 
        Height="550" 
        Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        Icon="/Resources/Images/LogoK-nect3.png">

    <!-- 🎨 CONTENEDOR PRINCIPAL -->
    <Grid>
        <!-- Fondo con efecto -->
        <Border CornerRadius="12">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1E3A8A" Offset="0"/>
                    <GradientStop Color="#3B82F6" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!-- CONTENEDOR DEL LOGIN -->
        <Border CornerRadius="12"                    
                BorderThickness="2"
                Background="{StaticResource PrimaryDark}"
                BorderBrush="{StaticResource PrimaryMedium}"
                Margin="60,30,60,30">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- ===== HEADER ===== -->
                <Border Grid.Row="0" 
                        Background="{StaticResource PrimaryMedium}" 
                        CornerRadius="12,12,0,0">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="K-NECT - INICIAR SESIÓN"
                                   Foreground="{StaticResource White}"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   Margin="20,0,0,0"/>

                        <!-- Botón Minimizar -->
                        <Button Grid.Column="1"
                                Content="_"
                                Background="Transparent"
                                Foreground="{StaticResource White}"
                                BorderThickness="0"
                                FontSize="16"
                                FontWeight="Bold"
                                Cursor="Hand"
                                VerticalContentAlignment="Top"
                                Click="BtnMinimize_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="Transparent">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Botón Cerrar -->
                        <Button Grid.Column="2"
                                Content="×"
                                Background="Transparent"
                                Foreground="{StaticResource White}"
                                BorderThickness="0"
                                FontSize="18"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Click="BtnCerrar_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="Transparent">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>

                <!-- ===== CONTENIDO PRINCIPAL ===== -->
                <Grid Grid.Row="1" Margin="20,15,20,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- ===== LADO IZQUIERDO: LOGO Y BOTÓN ===== -->
                    <StackPanel Grid.Column="0" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Margin="0,0,30,0"
                                Width="200">

                        <!-- Logo K-NECT -->
                        <TextBlock Text="K-NECT"
                                   Foreground="{StaticResource White}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Iniciar Sesión"
                                   Foreground="{StaticResource PrimaryLight}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,30"/>

                        <!-- Botón Iniciar Sesión -->
                        <Button x:Name="btnLogin"
                                Content="🔑 INICIAR SESIÓN"
                                Background="{StaticResource SuccessDark}"
                                Foreground="{StaticResource White}"
                                FontSize="13"
                                FontWeight="Bold"
                                Padding="25,12"
                                Margin="0,10,0,0"
                                Cursor="Hand"
                                Click="BtnLogin_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Mensaje de ayuda -->
                        <TextBlock Text="💡 Usa tus credenciales institucionales"
                                   Foreground="{StaticResource GrayLight}"
                                   FontSize="10"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="0,20,0,0"/>
                    </StackPanel>

                    <!-- ===== LADO DERECHO: FORMULARIO ===== -->
                    <StackPanel Grid.Column="1" 
                                Orientation="Vertical" 
                                VerticalAlignment="Center"
                                Width="320"
                                Margin="10,0,0,0">

                        <!-- Selector de Tipo de Usuario -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Tipo de Usuario"
                                       Foreground="{StaticResource GrayLight}"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>

                            <ComboBox x:Name="cmbTipoUsuario"
                                     SelectedIndex="0"
                                     FontSize="13"
                                     Foreground="{StaticResource TextDark}"
                                     BorderBrush="{StaticResource PrimaryLight}"
                                     BorderThickness="1"
                                     Background="{StaticResource White}"
                                     Height="38"
                                     VerticalContentAlignment="Center"
                                     Padding="12">
                                <ComboBoxItem Content="🎓 Estudiante"/>
                                <ComboBoxItem Content="👨‍🏫 Docente"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Campo Correo -->
                        <TextBlock Text="Correo Electrónico"
                                   Foreground="{StaticResource GrayLight}"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>

                        <TextBox x:Name="txtUsuario"
                                 Text="ejemplo@knect.com"
                                 FontSize="13"
                                 Foreground="Gray"
                                 CaretBrush="{StaticResource White}"
                                 BorderBrush="{StaticResource PrimaryLight}"
                                 BorderThickness="0,0,0,2"
                                 Background="Transparent"
                                 Height="38"
                                 VerticalContentAlignment="Center"
                                 Padding="10,0"
                                 Margin="0,0,0,20"
                                 GotFocus="TxtUsuario_GotFocus"
                                 LostFocus="TxtUsuario_LostFocus">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="{StaticResource SuccessLight}"/>
                                        </Trigger>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="BorderBrush" Value="{StaticResource SuccessLight}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <!-- Campo Contraseña -->
                        <TextBlock Text="Contraseña"
                                   Foreground="{StaticResource GrayLight}"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>

                        <PasswordBox x:Name="txtPassword"
                                     FontSize="13"
                                     Foreground="{StaticResource White}"
                                     CaretBrush="{StaticResource White}"
                                     BorderBrush="{StaticResource PrimaryLight}"
                                     BorderThickness="0,0,0,2"
                                     Background="Transparent"
                                     Height="38"
                                     VerticalContentAlignment="Center"
                                     Padding="10,0"
                                     Margin="0,0,0,15">
                            <PasswordBox.Style>
                                <Style TargetType="PasswordBox">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="{StaticResource SuccessLight}"/>
                                        </Trigger>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="BorderBrush" Value="{StaticResource SuccessLight}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </PasswordBox.Style>
                        </PasswordBox>

                        <!-- Recordar usuario -->
                        <CheckBox x:Name="chkRecordar"
                                  Content="Recordar mi usuario"
                                  Foreground="{StaticResource GrayLight}"
                                  FontSize="11"
                                  IsChecked="True"
                                  Margin="0,0,0,15"/>

                        <!-- Enlace Olvidé Contraseña -->
                        <TextBlock Text="¿Olvidaste tu contraseña?"
                                   Foreground="{StaticResource GrayLight}"
                                   FontSize="11"
                                   HorizontalAlignment="Right"
                                   Cursor="Hand"
                                   Margin="0,0,0,20">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="{StaticResource SuccessLight}"/>
                                            <Setter Property="TextDecorations" Value="Underline"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- Enlace a Registro -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="¿No tienes cuenta?"
                                       Foreground="{StaticResource GrayLight}"
                                       FontSize="11"/>
                            <TextBlock Text=" Regístrate aquí"
                                       Foreground="{StaticResource SuccessLight}"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Cursor="Hand"
                                       Margin="5,0,0,0"
                                       MouseDown="TxtRegistrarse_MouseDown">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="TextDecorations" Value="Underline"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>