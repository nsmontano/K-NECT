<Window x:Class="K_NECT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="K-NECT - Conecta tu Conocimiento" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown"
        Icon="/Resources/Images/LogoK-nect3.png">

    <!-- 🎨 CONTENEDOR PRINCIPAL -->
    <Border Background="{StaticResource White}" 
            CornerRadius="15" 
            Margin="20"
            BorderBrush="{StaticResource GrayLight}"
            BorderThickness="1">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ===== LADO IZQUIERDO - PRESENTACIÓN ===== -->
            <Border Grid.Column="0" 
                    Background="{StaticResource PrimaryDark}" 
                    CornerRadius="15,0,0,15">

                <StackPanel VerticalAlignment="Center" Margin="40">

                    <!-- 🎨 LOGO K-NECT -->
                    <Image Source="/Resources/Images/LogoK-nect2.png"
                       Width="120"
                       Height="120"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>      

                    <!-- 💬 SLOGAN -->
                    <TextBlock Text="Conecta tu esfuerzo con tus resultados" 
                              Foreground="{StaticResource PrimaryLight}" 
                              FontSize="16"
                              TextAlignment="Center"
                              Margin="0,0,0,30"/>

                    <!-- ✨ CARACTERÍSTICAS -->
                    <StackPanel Margin="0,20,0,0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="🎓" 
                                      FontSize="20"
                                      Margin="0,0,15,0"/>
                            <TextBlock Text="Seguimiento académico integral" 
                                      Foreground="{StaticResource White}" 
                                      FontSize="14"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="📊" 
                                      FontSize="20"
                                      Margin="0,0,15,0"/>
                            <TextBlock Text="Reportes de progreso detallados" 
                                      Foreground="{StaticResource White}" 
                                      FontSize="14"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="👨‍🏫" 
                                      FontSize="20"
                                      Margin="0,0,15,0"/>
                            <TextBlock Text="Comunicación estudiante-docente" 
                                      Foreground="{StaticResource White}" 
                                      FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- ===== LADO DERECHO - ACCESO ===== -->
            <Border Grid.Column="1" 
                    Background="{StaticResource White}" 
                    CornerRadius="0,15,15,0">

                <StackPanel VerticalAlignment="Center" Margin="40">

                    <!-- 👋 BIENVENIDA -->
                    <TextBlock Text="¡Bienvenido!" 
                              Foreground="{StaticResource PrimaryDark}" 
                              FontSize="28" 
                              FontWeight="Bold"
                              TextAlignment="Center"
                              Margin="0,0,0,10"/>

                    <TextBlock Text="Inicia tu viaje académico" 
                              Foreground="{StaticResource TextLight}" 
                              FontSize="16"
                              TextAlignment="Center"
                              Margin="0,0,0,40"/>

                    <!-- 🔑 BOTÓN INICIAR SESIÓN -->
                    <Button x:Name="BtnIniciarSesion"
                            Content="🔑 INICIAR SESIÓN"
                            Style="{StaticResource ModernButton}"
                            Margin="0,0,0,15"
                            Click="BtnIniciarSesion_Click"/>

                    <!-- 👤 BOTÓN REGISTRARSE -->
                    <Button x:Name="BtnRegistrarse"
                            Content="👤 REGISTRARSE"
                            Background="{StaticResource SuccessDark}"
                            Foreground="{StaticResource White}"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Padding="30,15"
                            Margin="0,0,0,30"
                            Cursor="Hand"
                            Click="BtnRegistrarse_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="8"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- 💡 NOTA INFORMATIVA -->
                    <TextBlock Text="💡 Usa tus credenciales institucionales para acceder"
                              Foreground="{StaticResource TextLight}"
                              FontSize="11"
                              TextAlignment="Center"
                              TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- ❌ BOTÓN CERRAR (esquina superior derecha) -->
            <Button Content="×"
                    Background="Transparent"
                    Foreground="{StaticResource TextLight}"
                    BorderThickness="0"
                    FontSize="20"
                    FontWeight="Bold"
                    Width="30"
                    Height="30"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,10,10,0"
                    Cursor="Hand"
                    Click="BtnCerrar_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</Window>