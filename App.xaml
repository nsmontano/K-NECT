<Application x:Class="K_NECT.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">

    <Application.Resources>
        <!-- 🎨 PALETA DE COLORES K-NECT -->
        <SolidColorBrush x:Key="PrimaryDark" Color="#1E3A8A"/>
        <SolidColorBrush x:Key="PrimaryMedium" Color="#3B82F6"/>
        <SolidColorBrush x:Key="PrimaryLight" Color="#60A5FA"/>
        <SolidColorBrush x:Key="SuccessDark" Color="#059669"/>
        <SolidColorBrush x:Key="SuccessLight" Color="#10B981"/>
        <SolidColorBrush x:Key="GrayLight" Color="#D9D9D9"/>
        <SolidColorBrush x:Key="White" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextDark" Color="#1E293B"/>
        <SolidColorBrush x:Key="TextLight" Color="#64748B"/>
        <SolidColorBrush x:Key="ErrorDark" Color="#DC2626"/>

        <!-- 🎨 ESTILO PARA BOTONES PRINCIPALES -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryMedium}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="30,15"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryDark}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>